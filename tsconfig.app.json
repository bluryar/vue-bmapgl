{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.mdx",
    ".storybook/preview.ts",
    "src/assets/bmapgl.js"
  ],
  "exclude": [
    ".test/*",
    "src/**/__tests__/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "types": [
      "vite/client",
      "bmapgl"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
